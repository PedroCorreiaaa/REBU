            <Label layoutX="52.0" layoutY="62.0" text="Veículo:">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <ComboBox fx:id="veiculoComboBox" layoutX="125.0" layoutY="63.0" prefHeight="25.0" prefWidth="192.0" style="-fx-background-color: clear; -fx-border-color: black;" />
            <Button fx:id="avancarButton" onMouseClicked="#avancar" layoutX="156.0" layoutY="148.0" mnemonicParsing="false" style="-fx-background-color: clear; -fx-border-color: black;" text="Avançar" />
         </children>
      </Pane>
      <Label layoutX="128.0" layoutY="107.0" style="-fx-background-color: WHITE;" text="Escolher Veículo">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button fx:id="voltarButton" onMouseClicked="#BackButton" layoutX="52.0" layoutY="64.0" mnemonicParsing="false" style="-fx-background-color: clear; -fx-border-color: black;" text="Voltar" />
   </children>
</AnchorPane>
