<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projetoiiapp.EscolherVeiculoController">
   <children>
      <AnchorPane prefHeight="58.0" prefWidth="600.0">
         <children>
            <Label fx:id="rebuTitle" layoutX="51.0" layoutY="6.0" style="-fx-font-weight: BOLD;" text="REBU">
               <font>
                  <Font size="40.0" />
               </font>
            </Label>
            <Button fx:id="historicoButton" onMouseClicked="#setHistoricoButtonClick" layoutX="371.0" layoutY="22.0" mnemonicParsing="false" style="-fx-background-color: CLEAR; -fx-border-color: black;" text="Histórico" />
            <Button fx:id="ajudaButton" onMouseClicked="#setAjudaButton" layoutX="450.0" layoutY="21.0" mnemonicParsing="false" style="-fx-background-color: CLEAR; -fx-border-color: black;" text="Ajuda" />
            <ImageView fx:id="menuUser" accessibleRole="MENU" fitHeight="33.0" fitWidth="30.0" layoutX="530.0" layoutY="18.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../imagens/Sample_User_Icon.png" />
               </image>
            </ImageView>
            <Button fx:id="registarVeiculoButton" onMouseClicked="#registarVeiculo" layoutX="258.0" layoutY="22.0" mnemonicParsing="false" style="-fx-background-color: clear; -fx-border-color: black;" text="Registar Veículo" />
